<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/operationCategoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/income" />

        <TextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/default_value"
            android:textAlignment="gravity"
            android:textColor="#326603"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/firstLineOperation"
                android:textColor="#4C1402"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/date_of_operation"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateOfOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:text="@string/date_of_operation"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/secondLineOperation"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4C1402"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="@string/description_of_operation"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descriptionOfOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/description_of_operation"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thirdLineOperation"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="#4C1402"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/category_of_operation"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/categoryOfOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/category_of_operation"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
